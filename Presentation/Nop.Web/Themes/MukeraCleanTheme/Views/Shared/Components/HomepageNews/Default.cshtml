                            <article class="tile tile-long">
                                <div class="tile-image" style="background-image: url(Themes/MukeraCleanTheme/Content/images/writings-life-style.png)"></div>
                                <a href="@Url.RouteUrl("BlogByTag", new { tag = "Life Style" })" class="tile-content">
