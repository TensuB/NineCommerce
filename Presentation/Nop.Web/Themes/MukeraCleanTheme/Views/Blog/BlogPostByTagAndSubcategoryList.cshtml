@model BlogPostListModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Blog").Text);
    //page class
    Html.AppendPageCssClassParts("html-blog-page");
}

<!-- blog -->
<section class="bg-light separator-top section-cover" style="background-image: url('../Themes/MukeraCleanTheme/Content/images/header-backgrounds/Dr-Barry-story-page-header-backgroud-third.png')">
  <div class="container">
    <div class="row justify-content-center">
        <div class="col-12 mt-10 text-center">
            <h1><b>Writing </b></h1>
            <hr />
            <h3>
                <a href="@Url.RouteUrl("BlogTagBySubcategory", new { tag =  @Model.PagingFilteringContext.Tag })">
                    @Model.PagingFilteringContext.Tag  
                </a>
                <b> &nbsp; > &nbsp;</b>
                @Model.PagingFilteringContext.Subcategory                         
            </h3>
        </div>
    </div>
  </div>             
</section>

<section class="bg-dark separator-top section-cover">
  <div class="container">
    <div class="row justify-content-center" id="writingHeaderSection">
        <div class="col-lg-12 text-white text-left">
            <h2><b>@Model.PagingFilteringContext.Subcategory</b> Details</h2>
            <hr/>

            @if(Model.BlogPostSubCategoriesByCount.Count() > 0)
            {            
                 foreach(var item in Model.BlogPosts)
                {            

                     <div class="post col" style="display: inline-block; margin-bottom: 1.5em;">
                        <div class="post-head">
                             <h2> @item.Title </h2>     
                            <span class="post-date">@item.CreatedOn.ToString("D")</span>
                            <div>&nbsp;</div>
                        </div>

                        <div class="col-sm-12 col-md-8 col-lg-10 text-center text-md-left" 
                                style="padding-left: 0px; line-height: 2.125; letter-spacing: 0.048em;">
                                @Html.Raw(!string.IsNullOrEmpty(item.BodyOverview) ? item.BodyOverview : item.Body)
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-2" data-aos="zoom-in">
                            <div class="presentation-circle">
                                <figure style="background-image: url('../Themes/MukeraCleanTheme/Content/assets/images/demo/learning/plant-based-program-image-4.png')"></figure>
                            </div>
                        </div>
                         
                     </div>
                    <div class="col-sm-12 col-md-10 col-lg-12 text-white text-right" style="padding-left:0px; padding-right:0px;">  
                        <hr/>
                        <div class="buttons" style="float:right;">
                            <a href="@Url.RouteUrl("BlogPost", new {SeName = item.SeName})" class="btn btn-white btn-rounded btn-block">@T("Blog.MoreInfo")</a> 
                        </div> 
                    </div>
                 }

            }
            else
            {
                <p>
                 No writing subcategories are found for the current tag!
                </p>
            }

        </div>

    </div>
  </div>             
            
</section>
<!-- / blog -->

