@model BlogPostListModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Blog").Text);
    //page class
    Html.AppendPageCssClassParts("html-blog-page");
}

<!-- blog -->
<section class="bg-gray-dark separator-top text-white" 
         style="background-image: url('../Themes/MukeraCleanTheme/Content/images/header-backgrounds/writing-page-header-backgroud.png');
        background-blend-mode: soft-light;">
    <div class="container">
        <div class="row justify-content-left" >
            <div class="col-12 text-center text-dark" 
                    style="background-color:brown; padding:1em; padding-bottom:4em; opacity:0.85; border-radius:4px;">
                    <h1><b>Writing</b></h1>
                <div class="col-lg-5"></div> <div class="col-lg-2"><hr/></div> <div class="col-lg-5"></div> 
                <div class="col-lg-12">         
                    <h3>Plant-based Nutrition <icon class="fa-circle subheadingseparator"></icon>
                    Health &amp; Wellbeing <icon class="fa-circle subheadingseparator"></icon>
                    Lifestyle <icon class="fa-circle subheadingseparator"></icon>
                    Recipes 
                    </h3>                
                </div> 
            </div>
        </div>
    </div>
</section>

<section class="bg-lighter">       
  <div class="container">
      <div class="row justify-content-center text-gray-darkest">
        <a href="@Url.RouteUrl("BlogTagBySubcategory", new { tag = "Diet" })" class="tile-content">
        <div class="col-sm-12 col-md-6 col-lg-4" >
            <img src="../Themes/MukeraCleanTheme/Content/images/writing-page/food-and-diet.png" alt="food-and-diet" />
        </div>
        <div class="col-sm-12 col-md-6 col-lg-8">                        
            <h2 class="writing-top-category-header">
             Food <span style="opacity:0.56;">and</span> Diet</h2>   
            <hr/>
            <p> Learn all about the five plant-food groups <icon class="fa-circle subheadingseparator"></icon>
                Understand the health benefits of brassicas and berries, beans and leafy greens, flaxseed, cacao and other superfoods
                <icon class="fa-circle subheadingseparator"></icon> Should I drink tea, or coffee? Is red wine healthy? Are avocados fattening? Is soy safe? <icon class="fa-circle subheadingseparator"></icon> All of your food and diet questions answered.
            </p>
        </div>
        </a>
    </div>
  </div>
</section>

<section class="bg-lighter">       
