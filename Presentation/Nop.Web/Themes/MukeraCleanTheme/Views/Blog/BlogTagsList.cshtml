@model BlogPostListModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Blog").Text);
    //page class
    Html.AppendPageCssClassParts("html-blog-page");
}

<!-- blog -->
<section class="bg-gray-dark separator-top text-white" 
         style="background-image: url('../Themes/MukeraCleanTheme/Content/images/header-backgrounds/writing-page-header-background-new.png');
        background-blend-mode: soft-light;">
    <div class="container">
        <div class="row justify-content-left" >
            <div class="col-12 text-center text-dark" 
                    style="background-color:brown; padding:1em; padding-bottom:4em; opacity:0.85; border-radius:4px;">
                    <h1 data-aos="fade-left"><b>Writing</b></h1>
                <div class="col-lg-5"></div> <div class="col-lg-2" data-aos="fade-right"><hr/></div> <div class="col-lg-5"></div> 
                <div class="col-lg-12" data-aos="fade-down">         
                    <h3>Plant-based Nutrition <icon class="fa-circle subheadingseparator"></icon>
                        Health &amp; Wellbeing <icon class="fa-circle subheadingseparator"></icon>
                        Lifestyle <icon class="fa-circle subheadingseparator"></icon>
                        Recipes 
                    </h3>                
                </div> 
            </div>
        </div>
    </div>
</section>

<section class="bg-lighter">       
  <div class="container">
      <div class="row justify-content-center text-gray-darkest tile-content writing-section-wrapper" >       
        <div class="col-sm-12 col-md-6 col-lg-4" data-aos="fade-left">
            <img src="../Themes/MukeraCleanTheme/Content/images/writing-page/food-and-diet-writing-section-2.png" alt="food-and-diet" />
        </div>
        <div class="col-sm-12 col-md-6 col-lg-8">                        
            <h2 class="writing-top-category-header" style="background-color: maroon;" data-aos="fade-right">
             Food <span class="supressed">and</span> Diet</h2>   
            <hr/>
            <div data-aos="fade-left">
                <p> Learn all about the five plant-food groups <icon class="fa-asterisk subheadingseparator"></icon>
                    Understand the health benefits of brassicas and berries, beans and leafy greens, flaxseed, cacao and other superfoods
                    <icon class="fa-asterisk subheadingseparator"></icon> Should I drink tea, or coffee? Is red wine healthy? Are avocados fattening? Is soy safe? 
                </p>
                <p class="highlighted-content" data-aos="fade-up">
                    <icon class="fa-leaf fa-lg" style="color: #3fa802;">&nbsp;</icon>  All of your food and diet questions answered.
                    <hr/>
                </p>

            </div>

            <p class="text-right" data-aos="fade-down">             
               <a href="@Url.RouteUrl("BlogTagBySubcategory", new { tag = "Food and diet" })" class="btn btn-cilantro btn-rounded px-5 ">Learn More</a>
            </p>
        </div>        
    </div>
  </div>
</section>

<section class="bg-lighter">       
  <div class="container">
    <div class="row justify-content-center text-darker tile-content writing-section-wrapper">       
            <div class="col-sm-12 col-md-6 col-lg-4" data-aos="fade-right">
                <img src="../Themes/MukeraCleanTheme/Content/images/writing-page/nutrition-writing-section.png" alt="Nutrition"/>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-8">                        
                <h2 class="writing-top-category-header" style="background-color: #b94c29;" data-aos="fade-left">Nutrition</h2>   
                <hr/>
                <div data-aos="fade-right">
                    <p>You're A to Z of plant-based nutrition <icon class="fa-asterisk subheadingseparator"></icon>
                        Basics of plant-based biochemistry <icon class="fa-asterisk subheadingseparator"></icon>
                        Highlighting the power of plant-based ‘phyto’ nutrition <icon class="fa-asterisk subheadingseparator"></icon>
                        Demonstrating the detrimental effects of animal-based nutrition <icon class="fa-asterisk subheadingseparator"></icon>
                        Addressing nutritional concerns of plant-based nutrition <icon class="fa-asterisk subheadingseparator"></icon>
                        Where do you get your "protein, calcium, B12, omega-3's etc"?                   
                   
                    </p>
                    <p class="highlighted-content" data-aos="fade-up">
                        <icon class="fa-leaf fa-lg" style="color: #3fa802;">&nbsp;</icon> All of your nutritional concerns explained. <hr/>
                    </p>
                </div>

                <p class="text-right" data-aos="fade-down">             
                    <a href="@Url.RouteUrl("BlogTagBySubcategory", new { tag = "Nutrition" })" class="btn btn-cilantro btn-rounded px-5 ">Learn More</a>
                </p>
            </div>        
    </div>
  </div>
</section>

<section class="bg-lighter">       
  <div class="container">
      <div class="row justify-content-center text-gray-darkest tile-content writing-section-wrapper">
        <div class="col-sm-12 col-md-6 col-lg-4" data-aos="fade-right">
            <img src="../Themes/MukeraCleanTheme/Content/images/writing-page/health-and-wellbeing-section-writing.png" alt="Health and Welbeing"/>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-8">                        
