@model ContactUsModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.ContactUs").Text);
    //page class
    Html.AppendPageCssClassParts("html-contact-page");
}
<section class="bg-light-dark text-gray-dark">
    <div class="container">
        <div class="row justify-content-left text-gray-dark" >
             <div class="col-12 text-center " >
                <h1 style="margin-top:0px;"><b>@T("PageTitle.ContactUs")</b></h1>                               
            </div>
        </div>
    </div>
</section>


<section class="bg-light section-cover">
    <div class="container"> 
    <div class="row justify-content-center">

            <div class="col-12 text-center" data-aos="fade-left">     
                <h2 style="margin-bottom: 0.5em; color:brown !important;">
                    <b>Get in touch</b>                      
                </h2>
            </div>

            <div class="col-md-5"></div> 
                <div class="col-md-2" data-aos="fade-right">                   
                    <hr class="header-accent-hr" /> 
                </div> 
            <div class="col-md-5"></div> 

            <div class="col-12 text-center" data-aos="fade-left">     
                <h3>Contact us directly using the form below. </h3>
                <p>&nbsp;</p>
            </div>
    </div>

    <div class="row align-items-center" >

    <!-- contact us page Intro -->
    <div class="col-sm-12 col-md-12 col-lg-12">&nbsp;</div>
    <!-- Contact us page - contact form -->
    <div class="col-sm-12 col-md-2 col-lg-2">&nbsp;</div>
    <div class="col-sm-12 col-md-10 col-lg-8">
        @if (Model.SuccessfullySent)
        {
            <div class="result"> @Model.Result </div>
        }
        else
        {
           <form asp-route="ContactUs" method="post" id="connect_form" data-aos="fade-right">
           <div class="col-sm-12 col-md-10 col-lg-10"><div asp-validation-summary="ModelOnly" class="message-error"></div> </div>

            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div style="display: flex !important;">
                    <input asp-for="FirstName" placeholder="@T("ContactUs.FirstName.Hint")" class="firstName form-control" 
                            id="firstname" />
                    <nop-required />
                    <span asp-validation-for="FirstName"></span> 
                </div>     
           </div>
            <div class="form-group col-sm-12 col-md-6 col-lg-6"> 
                <div style="display: flex !important;">
                    <input asp-for="LastName" placeholder="@T("ContactUs.LastName.Hint")" class="lastname form-control" 
                            id="lastname"/>
                    <nop-required />
                    <span asp-validation-for="LastName"></span>   
                </div>   
           </div>
            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div style="display: flex !important;">
                     <input asp-for="Email" placeholder="@T("ContactUs.Email.Hint")" class="email form-control" type="email" id="email" style="padding:2.35em;"/>
                    <nop-required />
                    <span asp-validation-for="Email"></span> 
                </div>  
            </div>
            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                @Html.DropDownListFor(d=>d.Subject, Model.SubjectAreaList, new {@class="form-control", id="Subject" })            
            </div>
           <div class="col-sm-12 col-md-12 col-lg-12">
               <div>&nbsp;</div>
            <div class="form-group"  data-aos="fade-left">
                <div style="display: flex !important;">
                    <textarea asp-for="Enquiry" class="subject form-control" placeholder="@T("ContactUs.Enquiry.Hint")" id="Enquiry" rows="3"></textarea>
                    <nop-required />
                    <span asp-validation-for="Enquiry"></span>

                    @if (Model.DisplayCaptcha)
                    {
                        <nop-captcha />
                    }
                </div>  
            </div>
           </div>
               <div class="col-sm-12 col-md-10 col-lg-6">&nbsp;</div>
               <div class="col-sm-12 col-md-12 col-lg-12">

                <div class="form-group text-right"  data-aos="fade-right">
                    <button type="submit" name="send-email" class="btn btn-green btn-rounded">@T("ContactUs.Button")</button>
                </div>

               </div>
            </form>
        }
    </div> 
    <div class="col-sm-12 col-md-2 col-lg-2">&nbsp;</div>
     </div>
    </div>    


    
</section>

<section class="bg-gray-darkest separator-top section-cover text-white" >
    <div class="container">
        <div class="row justify-content-center">        
            <div class="col-12 text-center">     
                <h2 style="margin-bottom: 0.5em; color:brown !important;">
                    <b>Join Us on Social Media</b>                      
                </h2>
            </div>

            <div class="col-md-5"></div> 
                <div class="col-md-2">                   
                    <hr class="header-accent-hr" /> 
                </div> 
            <div class="col-md-5"></div> 

        </div>

        <div class="row justify-content-center" >
            <div class="col-sm-12 col-md-12 col-lg-12 text-center">

            <ul class="socials">
                <li class="list-inline-item"><a href="https://www.facebook.com/barry.toole.146" class="icon-facebook text-facebook fs-20"></a></li>
                <li class="list-inline-item"><a href="" class="icon-instagram text-instagram fs-20"></a></li>
                <li class="list-inline-item"><a href="" class="icon-twitter text-twitter fs-20"></a></li>
                <li class="list-inline-item"><a href="" class="icon-linkedin text-linkeding fs-20"></a></li>
                <li class="list-inline-item"><a href="" class="icon-pinterest-square text-pinterest fs-20"></a></li>   
            </ul>      

            <div class="col-sm-12 col-md-1 col-lg-1">&nbsp;</div>

            </div>
        </div>
    </div>
</section>