@model ContactUsModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.ContactUs").Text);
    //page class
    Html.AppendPageCssClassParts("html-contact-page");
}

<section class="bg-light-dark text-gray-dark" 
         style="background-image: url('../Themes/MukeraCleanTheme/Content/images/header-backgrounds/connect-page-header-background-22.png');">
    <div class="container">
        <div class="row justify-content-left" >
             <div class="col-12 text-center text-white" 
                    style="background-color:brown; padding:1em; padding-bottom:4em; opacity:0.85; border-radius:4px;">              
                 <div class="col-12">
                    <h1><b>@T("PageTitle.ContactUs")</b></h1>
                </div> 
                <div class="col-md-5"></div> 
                <div class="col-md-2"><p>&nbsp;</p><hr/></div> 
                <div class="col-md-5"></div> 
                <div class="col-md-12">         
                    <h3>Ask Question <icon class="fa-circle subheadingseparator"></icon> Social Media Links</h3>              
                </div> 
            </div>
        </div>
    </div>
</section>

<section class="bg-light separator-top section-cover">
    <div class="container"> 
    <div class="row justify-content-center">

            <div class="col-12 text-center">     
                <h2 style="margin-bottom: 0.5em; color:brown !important;">
                    <b>Get in touch</b>                      
                </h2>
            </div>

            <div class="col-md-5"></div> 
                <div class="col-md-2">                   
                    <hr class="header-accent-hr" /> 
                </div> 
            <div class="col-md-5"></div> 

            <div class="col-12 text-center">     
                <h3>Contact us directly using the form below. </h3>
                <p>&nbsp;</p>
            </div>
    </div>

    <div class="row align-items-center" >
    @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.ContactUsTop })

    <!-- contact us page Intro -->
    <div class="col-sm-12 col-md-12 col-lg-12 text-center">
        <hr/>
       <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas vel turpis non sem gravida eleifend. Nullam eget interdum massa. Etiam pharetra lorem quam, interdum suscipit mi cursus sollicitudin. Donec erat enim, tristique rhoncus ornare vel, tempor at metus. </p>

        <p>&nbsp;</p>
        <hr/>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-12">&nbsp;</div>
    <!-- Contact us page - contact form -->
    <div class="col-sm-12 col-md-2 col-lg-2">&nbsp;</div>
    <div class="col-sm-12 col-md-10 col-lg-8">
        @if (Model.SuccessfullySent)
        {
            <div class="result"> @Model.Result </div>
        }
        else
        {
           <form asp-route="ContactUs" method="post" id="connect_form">
           <div class="col-sm-12 col-md-10 col-lg-10"><div asp-validation-summary="ModelOnly" class="message-error"></div> </div>

            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div style="display: flex !important;">
                    <input asp-for="FirstName" placeholder="@T("ContactUs.FirstName.Hint")" class="firstName form-control" 
                            id="firstname"/>
                    <nop-required />
                    <span asp-validation-for="FirstName"></span> 
                </div>     
           </div>
            <div class="form-group col-sm-12 col-md-6 col-lg-6"> 
                <div style="display: flex !important;">
                    <input asp-for="LastName" placeholder="@T("ContactUs.LastName.Hint")" class="lastname form-control" 
                            id="lastname"/>
                    <nop-required />
                    <span asp-validation-for="LastName"></span>   
                </div>   
           </div>
            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div style="display: flex !important;">
                     <input asp-for="Email" placeholder="@T("ContactUs.Email.Hint")" class="email form-control" type="email" id="email"/>
                    <nop-required />
                    <span asp-validation-for="Email"></span> 
                </div>  
            </div>
            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div style="display: flex !important;">
                     <!--<input asp-for="Subject" placeholder="@T("ContactUs.Subject.Hint")" class="form-control" type="text" id="Subject"/> -->
                  
                @Html.DropDownListFor(model => model.Subject, Model.SubjectAreaList,  new { @class = "form-control subject-select-list", id="Subject", @required = true, @placehodler ="Select subject area" } )  
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                </div>  
            </div>
           <div class="col-sm-12 col-md-12 col-lg-12">
            @if(Model.SubjectEnabled)
            {
                <div class="form-group">
                    <textarea asp-for="Subject" class="subject form-control" placeholder="@T("ContactUs.Subject.Hint")" id="Subject" rows="3"></textarea>
                    <span asp-validation-for="Subject"></span>
                </div>
            }

            <div class="form-group">
                <div style="display: flex !important;">
                    <textarea asp-for="Enquiry" class="subject form-control" placeholder="@T("ContactUs.Enquiry.Hint")" id="Enquiry" rows="3"></textarea>
                    <nop-required />
                    <span asp-validation-for="Enquiry"></span>

                    @if (Model.DisplayCaptcha)
                    {
                        <nop-captcha />
                    }
                </div>  
            </div>
           </div>
               <div class="col-sm-12 col-md-10 col-lg-6">&nbsp;</div>
               <div class="col-sm-12 col-md-12 col-lg-12">

                <div class="form-group text-right">
                    <button type="submit" name="send-email" class="btn btn-green btn-rounded">@T("ContactUs.Button")</button>
                </div>

               </div>
            </form>
        }
    </div> 
    <div class="col-sm-12 col-md-2 col-lg-2">&nbsp;</div>
     </div>
    </div>    

    @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.ContactUsBottom })
    
</section>

