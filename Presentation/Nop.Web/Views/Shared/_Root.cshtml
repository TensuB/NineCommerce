@{
    Layout = "_Root.Head";
}
@await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.BodyStartHtmlTagAfter })
@await Html.PartialAsync("_Notifications")
@await Html.PartialAsync("_JavaScriptDisabledWarning")
@await Html.PartialAsync("_OldInternetExplorerWarning")


<header class="header-sticky header-dark headroom headroom--top headroom--not-bottom" >
    @await Component.InvokeAsync("TopMenu")
</header>

<!-- The Main Page boy section - start -->
<!-- Breacdcrumb section -->
@await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.ContentBefore })
@if (IsSectionDefined("Breadcrumb"))
{
    <section class="hero hero-with-header separator-bottom">
      <div class="container">
        <div class="row">
          <div class="col">
            <nav aria-label="breadcrumb">
                @RenderSection("Breadcrumb") 
            </nav>
          </div>
        </div>
      </div>    
    </section>
}           
@await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.ContentAfter })         
    

<!-- The Main Page body section - start -->
@await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.ContentBefore })
    @RenderBody()   
@await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.ContentAfter }) 
<!-- The Main Page body section - end -->


<!-- footer -->
<footer class="bg-gray-dark text-white" style="padding: 0px !important;
        background-image: url(/Themes/MukeraCleanTheme/Content/images/writings-nutrition-footer-background.png) !important;
        background-blend-mode: overlay;
        border-top: solid 1px #3a7602; background-color: #525700 !important" >

<section class="component universalPageFooter" style="width: 100% !important;
        max-width: 100% !important; padding: 1.75em 0em;">
    <div class="container">
        <div class="row justify-content-center" style="mix-blend-mode: hard-light;">
        <div class="col-md-8 text-center">
        <h2>Sign up for our free newsletter</h2>
        <p class="lead">To receive all the latest news and articles</p>
        <form class="form form-cta mt-2">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-4" style="padding-top:0.5em;">
                    <input type="text" class="form-control form-control" id="newsletterSubscriptionName" placeholder="Insert your name" aria-label="name" aria-describedby="basic-name">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4" style="padding-top:0.5em;">
                    <input type="email" class="form-control form-control" id="newsletterSubscriptionEmail" placeholder="Insert your email" aria-label="email" aria-describedby="basic-email">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4" style="padding-top:0em;">
                    <button type="submit" class="btn btn-green btn-rounded">Subscribe</button>
                </div>
            </div>
        </div>
        </form>
        </div>
        </div>
    </div>
</section>

<section class="component universalPageFooter" style="width: 100% !important;
        max-width: 100% !important;
        padding: 2.75em 0em;
        background-color: #122702c7;
        opacity: 0.85;">
    <div class="container">
     <div class="container py-5" style="padding-top: 0.25rem !important;">
                <div class="row justify-content-between">
                    <div class="col-sm-12 col-md-6 col-lg-4 text-center text-md-left">
                        <h3>Information</h3>
                        <hr/>
                        <ul class="nav">
                      <li class="nav-item"><a class="nav-link" href="@Url.RouteUrl("VendorPrivacyNotice")">Privacy Notice</a></li>
                      <li class="nav-item"><a class="nav-link" href="@Url.RouteUrl("VendorConditionsOfUse")">Conditions of Use</a></li>
                      <li class="nav-item"><a class="nav-link" href="@Url.RouteUrl("CustomerInfo")">Contacts</a></li>                     
                      <li class="nav-item"><a class="nav-link" href="@Url.RouteUrl("Sitemap")">Sitemap</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-4 text-center text-md-left">
                        <h3>Customer Service</h3>
                        <hr/>
                        <ul class="nav">
                            <li class="nav-item"><a class="nav-link" href="@Url.RouteUrl("NewsArchive")">News</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.RouteUrl("BlogsByTagList")">Writings(My Blog)</a></li>
                            <!--
                                <li class="nav-item"><a class="nav-link" href="@Url.RouteUrl("NewProducts")">New products</a></li>  
                            -->                   
                        </ul>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-4 text-center text-md-left">
                        <h3>Find & Follow Us</h3>
                        <hr/>
                        <ul class="socials">
                            <li><a href="" class="icon-facebook text-facebook fs-16"></a></li>
                            <li><a href="" class="icon-instagram text-instagram fs-16"></a></li>
                            <li><a href="" class="icon-twitter text-twitter fs-16"></a></li>
                            <li><a href="" class="icon-linkedin text-linkeding fs-16"></a></li>
                            <li><a href="" class="icon-pinterest-square text-pinterest fs-16"></a></li>                            
                        </ul>
                    </div>
                </div>
            </div>        
    </div>
</section>

</footer>    
<!-- / footer -->

