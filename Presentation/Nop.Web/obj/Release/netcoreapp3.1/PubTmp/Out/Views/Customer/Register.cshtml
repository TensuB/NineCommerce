@model RegisterModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Register").Text);
    //page class
    Html.AppendPageCssClassParts("html-registration-page");
}

<section class="bg-gray-dark separator-top text-white" 
         style="background-image: url('../Themes/MukeraCleanTheme/Content/images/header-backgrounds/writing-page-header-background-new.png');
        background-blend-mode: soft-light;">
    <div class="container">
        <div class="row justify-content-left" >
            <div class="col-12 text-center text-dark" 
                    style="background-color:brown; padding:1em; padding-bottom:4em; opacity:0.85; border-radius:4px;">
                    <h1 data-aos="fade-left"><b>@T("Account.Register")</b></h1>
                <div class="col-lg-5"></div> <div class="col-lg-2" data-aos="fade-right"><hr/></div> <div class="col-lg-5"></div> 
                <div class="col-lg-12" data-aos="fade-down">         
                    <h3>From your account, manage your Profile and Resources</h3>                
                </div> 
            </div>
        </div>
    </div>
</section>


