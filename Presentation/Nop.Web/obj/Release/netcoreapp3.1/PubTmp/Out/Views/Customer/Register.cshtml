                    <div style="display: flex !important;">
                        <input asp-for="Email" class="form-control" />
                        <nop-required />
                    </div>
                    <span asp-validation-for="Email"></span>
                </div>    
                <div style="font-weight:bold;" class="inputs col-sm-12 col-md-6 col-lg-6">
                    <label style="font-weight:bold;" asp-for="ConfirmEmail" asp-postfix=":"></label>
                    <div style="display: flex !important;">
                        <input asp-for="ConfirmEmail" class="form-control" />
                        <nop-required />
                    </div>
                    <span asp-validation-for="ConfirmEmail"></span>
                </div>
            </div>

