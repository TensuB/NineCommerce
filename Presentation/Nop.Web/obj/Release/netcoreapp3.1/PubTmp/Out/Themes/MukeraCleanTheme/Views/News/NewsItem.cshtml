@model NewsItemModel
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(!string.IsNullOrEmpty(Model.MetaTitle) ? Model.MetaTitle : Model.Title);
    //meta
    Html.AddMetaDescriptionParts(Model.MetaDescription);
    Html.AddMetaKeywordParts(Model.MetaKeywords);
    //page class
    Html.AppendPageCssClassParts("html-news-item-page");
}

<section class="bg-light separator-top section-cover">
    <div class="container">
        <div class="row justify-content-left" >
        <div class="col-12 mt-10 text-center">
             <h1>News Item Details</h1>                
        </div>
        </div>
    </div>
</section>

<section class="bg-dark separator-top section-cover">
    <div class="container">
         <div class="row justify-content-between align-items-center">
            <div class="col-12 col-md-12 pl-md-5">
                <div class="col-12 text-left text-white" style="padding-left:0px;">
                    <h2 style="margin:0px 0px 10px 0px;">@Model.Title</h2>                      
                </div>

                <div class="news-date">               
                @Model.CreatedOn.ToString("D")
                </div>
        @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.NewsItemPageBeforeBody, additionalData = Model })


            <div class="col-sm-12 col-md-10 col-lg-8 news-body text-white" style="padding-left: 0px;">
                @Html.Raw(Model.Full)
            </div>
             <div class="col-sm-8 col-md-3 col-lg-2 align-items-center" data-aos="zoom-in">
                <div class="presentation-circle">
                    <figure style="background-image: url('../Themes/MukeraCleanTheme/Content/assets/images/demo/learning/plant-based-program-image-4.png')"></figure>
                </div>
            </div>
      
               <div class="col-sm-12 col-md-12 col-lg-12 text-left">
                   <div>&nbsp;</div>
                   <hr/>
               </div>

            <div class="col-sm-12 col-md-10 col-lg-12 text-center" >
                <ul class="list-inline mb-0">
                    <li class="list-inline-item">
                        <a href="#"><i class="icon-facebook-square fs-20"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#"><i class="icon-linkedin-square fs-20"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#"><i class="icon-twitter-square fs-20"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#"><i class="icon-instagram fs-20"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#"><i class="icon-pinterest-square fs-20"></i></a>
                    </li>
                </ul>
            </div>

               <div class="col-sm-12 col-md-12 col-lg-12 text-right">
                   <div>&nbsp;</div>
                   <hr/>
                   <div>&nbsp;</div>
                    <a class="nav-link btn btn-white btn-rounded" href="@Url.RouteUrl("NewsArchive")">Back to News Items</a>
                </div>               
            </div>          
        </div>
     </div>
</section>

