@model BlogPostListModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Blog").Text);
    //page class
    Html.AppendPageCssClassParts("html-blog-page");
}

<!-- blog -->
<section class="bg-light separator-top section-cover" 
         style="background-image: url('../Themes/MukeraCleanTheme/Content/images/header-backgrounds/Dr-Barry-story-page-header-backgroud-third.png')" >
  <div class="container">
    <div class="row justify-content-center">
        <div class="col-12 mt-10 text-center">
            <h1><b>Writing</b></h1>
            <hr />
            <h3>Plant-based Nutrition <icon class="fa-circle subheadingseparator"></icon>
                Health <icon class="fa-circle subheadingseparator"></icon>
                Wellbeing <icon class="fa-circle subheadingseparator"></icon>
                Lifestyle <icon class="fa-circle subheadingseparator"></icon>
                Recipes </h3>
        </div>
    </div>
  </div>             
</section>

<section class="bg-gray-dark separator-top section-cover">       
  <div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 text-white text-left">
            <h2> <span>The</span> What</h2>                 
            <hr/>
            <p>
              Read about the details of plant-based nutrition and exactly what foods to eat.
            </p>
            <p>&nbsp;</p>
        </div>

        <div class="bg-gray-darkest col-12 text-white">
            <a href="@Url.RouteUrl("BlogTagBySubcategory", new { tag = "Diet" })" class="tile-content">
            <div class="col-sm-12 col-md-6 col-lg-4" style="padding: 0em;">
                <img src="../Themes/MukeraCleanTheme/Content/images/writing-page/food-and-diet.png" alt=""
                     style="height: 250px; width: 350px; margin-left:-15px;"/>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-8" style="padding: 2em 1.5em;">                        
                <h3>Food and Diet</h3>
                <hr/>
                <p> Learn all about the five plant-food groups <icon class="fa-circle subheadingseparator"></icon>
                    Understand the health benefits of brassicas and berries, beans and leafy greens, flaxseed, cacao and other superfoods
                    <icon class="fa-circle subheadingseparator"></icon> Should I drink tea, or coffee? Is red wine healthy? Are avocados fattening? Is soy safe? <icon class="fa-circle subheadingseparator"></icon> All of your food and diet questions answered.
                </p>
            </div>
            </a>
        </div>

        <div>&nbsp;</div>

        <div class="bg-gray-darkest col-12 text-white" style="padding: 2em 1em;">
            <a href="@Url.RouteUrl("BlogTagBySubcategory", new { tag = "Nutrition" })" class="tile-content">
            <div class="col-sm-12 col-md-6 col-lg-4">
                <img src="../Themes/MukeraCleanTheme/Content/images/writing-page/nutrition.png" alt=""
                     style="height: 250px; width: 350px;"/>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-8">                        
                <h3>Nutrition</h3>
                <hr/>
                <p>You're A to Z of plant-based nutrition <icon class="fa-circle subheadingseparator"></icon>
                   Basics of plant-based biochemistry <icon class="fa-circle subheadingseparator"></icon>
                   Highlighting the power of plant-based ‘phyto’ nutrition <icon class="fa-circle subheadingseparator"></icon>
                   Demonstrating the detrimental effects of animal-based nutrition <icon class="fa-circle subheadingseparator"></icon>
                   Addressing nutritional concerns of plant-based nutrition <icon class="fa-circle subheadingseparator"></icon>
                   Where do you get your "protein, calcium, B12, omega-3's etc"? <icon class="fa-circle subheadingseparator"></icon>
                   All of your nutritional concerns explained.
            </div>
            </a>
        </div>
    </div>
  </div>
</section>

